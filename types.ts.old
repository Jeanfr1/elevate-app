export type DubbingStatus = 'idle' | 'uploading' | 'pending' | 'processing' | 'completed' | 'failed';

export interface DubbingRequest {
  id: string;
  user_id?: string;
  status: DubbingStatus;
  original_video_url: string;
  target_language: string;
  dubbed_video_url?: string | null;
  created_at?: string;
  error_message?: string;
}

export interface N8NPayload {
  request_id: string;
  video_url: string;
  language: string;
}

